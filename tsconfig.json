{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": "src",
        "declaration": false,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "es6",
            "dom",
            "es2018.promise"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "outDir": "dist",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6",
        "typeRoots": ["./types", "node_modules/@types"],
        "types": ["react", "node"]
    },
    "exclude": ["dist", "node_modules", "typings"],
    "include": [
        "./src",
        "./webpack.config.ts"
    ]
}
